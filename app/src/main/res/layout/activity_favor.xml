<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favor_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <RadioGroup
                android:id="@+id/favor_rg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/favor_sta"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/favor_rg_shape_corner_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="收藏站点"
                    android:textColor="@drawable/favor_rg_text_color_select" />

                <RadioButton
                    android:id="@+id/favor_shop"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/favor_rg_shape_corner_right"
                    android:button="@null"
                    android:gravity="center"
                    android:text="收藏商家"
                    android:textColor="@drawable/favor_rg_text_color_select" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/favor_frag_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
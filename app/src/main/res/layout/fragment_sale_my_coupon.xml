<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sale_my_coupon"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.example.zero.view.CouponView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sale_my_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:baselineAlignBottom="true"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/sale_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="麦当劳"
                android:textColor="@color/deep_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sale_my_price"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="八折"
                        android:textColor="@color/GreenTheme4"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sale_my_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="满50可用"
                        android:textColor="@color/GreenTheme4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sale_my_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可赠送"
                        android:textColor="@color/GreenTheme3"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/sale_my_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="2017.10.01-2017.10.31"
                        android:textColor="@color/GreenTheme9"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp">

            <Button
                    android:id="@+id/gift_my_btn"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/sale_button_use_shape"
                    android:text="分享"
                    android:textColor="@color/GreenTheme"
                    android:textSize="12sp"/>

            <Button
                android:id="@+id/sale_my_btn"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/sale_button_use_shape"
                android:text="立即使用"
                android:textColor="@color/GreenTheme"
                android:textSize="12sp" />



        </LinearLayout>
    </com.example.zero.view.CouponView>

    <com.example.zero.view.CouponView
        android:id="@+id/sale_my_coupon_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"
        android:visibility="gone" />
</FrameLayout>